<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anamensis.batch.mapper.UserConfigSmtpMapper">
    <sql id="tbl_member_config_smtp">
        SELECT *
          FROM member_config_smtp
    </sql>
    <select id="findAll" resultType="MemberConfigSmtp">
        <include refid="tbl_member_config_smtp"/>
        WHERE is_use = 1
    </select>
    <select id="findByIds" resultType="MemberConfigSmtp">
        <include refid="tbl_member_config_smtp"/>
        WHERE is_use = 1
          AND id IN
        <foreach collection="ids" item="id"  open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>
