<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anamensis.server.mapper.PointCodeMapper">
    <sql id="tbl_point_code">
        SELECT *
          FROM point_code
    </sql>
    <select id="selectAll"  resultType="PointCode">
        <include refid="tbl_point_code" />
        ORDER BY id
    </select>
    
    <select id="selectByIdOrName" resultType="PointCode">
        <include refid="tbl_point_code" />
         WHERE 1 = 1
       <choose>
            <when test="name != null and name != ''">
               AND name = #{name}
            </when>
           <when test="id != 0">
               AND id = #{id}
           </when>
       </choose>
    </select>

    <insert id="insert" parameterType="PointCode">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT currval('point_code_id_seq')
        </selectKey>
        INSERT INTO point_code
               (name, point, editable)
        VALUES (#{name}, #{point}, TRUE)
    </insert>

    <update id="update" parameterType="PointCode">
        UPDATE point_code
        <set>
            <if test="name != null and name != ''">
                name  = #{name},
            </if>
            <if test="point != null and point != 0">
                point = #{point}
            </if>
        </set>
         WHERE id       = #{id}
    </update>

    <update id="resetById">
        UPDATE point_code
           SET point = init_value
         WHERE id    = #{id}
    </update>

    <update id="reset">
        UPDATE point_code
           SET point = init_value
    </update>
</mapper>