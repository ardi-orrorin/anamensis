<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anamensis.server.mapper.UserMapper">
    <sql id="tbl_user">
        SELECT *
          FROM user
    </sql>
    <select id="findAllUsers" resultType="User">
        <include refid="tbl_user"/>
    </select>
    <select id="findUserByUserId" resultType="User">
        <include refid="tbl_user"/>
        WHERE user_id = #{userId}
    </select>
    <select id="findUserByUserIdAndPwd" resultType="User">
        <include refid="tbl_user"/>
        WHERE user_id = #{userId}
          AND pwd     = #{pwd}
    </select>
    <select id="findUserInfo" resultMap="userResultMap">
        SELECT *
          FROM user a
          JOIN role b
            ON a.id      = b.user_pk
         WHERE a.user_id = #{userId}
    </select>
    <select id="existsUser" resultType="boolean">
        SELECT EXISTS(
               SELECT *
                 FROM user
                WHERE 1 = 1
                 <choose>
                    <when test="type != null and type == 'id' and value != null and value != ''">
                        AND user_id = #{value}
                    </when>
                    <when test="type != null and type == 'email' and value != null and value != ''">
                        AND email   = #{value}
                    </when>
                    <when test="type != null and type == 'phone' and value != null and value != ''">
                        AND phone   = #{value}
                    </when>
                 </choose>
             )
    </select>
    <insert id="save" parameterType="User">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO user (user_id, pwd, name, email, phone)
         VALUE (#{userId}, #{pwd}, #{name}, #{email}, #{phone})
    </insert>
    <insert id="saveRole" parameterType="Role">
        INSERT INTO role (user_pk, role)
         VALUE (#{userPk}, #{role})
    </insert>
    <delete id="deleteRole" parameterType="Role">
        DELETE
          FROM role
         WHERE user_pk = #{userPk}
           AND role    = #{role}
    </delete>
    
    <resultMap id="userResultMap" type="UserResultMap" autoMapping="true">
        <id property="userPk" column="id"/>
        <association property="user" resultMap="UserEntity" autoMapping="true" />
        <collection property="roles" resultMap="RoleEntity" />
    </resultMap>

    <resultMap id="UserEntity" type="User" autoMapping="true">
    </resultMap>
    <resultMap id="RoleEntity" type="Role" autoMapping="true">
        <result property="role" column="role" typeHandler="RoleTypeHandler"/>
    </resultMap>
</mapper>