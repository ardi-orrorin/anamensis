<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anamensis.server.mapper.UserConfigSmtpMapper">
    <sql id="tbl_user_config_smtp">
        SELECT *
          FROM user_config_smtp
    </sql>
    <select id="selectByUserPk" resultType="UserConfigSmtp">
      <include refid="tbl_user_config_smtp"/>
         WHERE user_pk = #{userPk}
           AND is_use = 1
    </select>
    <select id="selectById" resultType="UserConfigSmtp">
      <include refid="tbl_user_config_smtp"/>
         WHERE id = #{id}
           AND is_use = 1
    </select>

    <select id="isDefault" resultType="boolean">
        SELECT EXISTS(
               SELECT id
                 FROM user_config_smtp
                WHERE user_pk    = #{userPk}
                  AND id         = #{id}
                  AND is_use     = 1
                  AND is_default = 1
        );
    </select>

    <select id="selectFirstId" resultType="UserConfigSmtp">
      <include refid="tbl_user_config_smtp"/>
         WHERE user_pk = #{userPk}
           AND is_use = 1
         ORDER BY ID
         LIMIT 1
    </select>

    <insert id="save" parameterType="UserConfigSmtp">
        <selectKey keyProperty="id" resultType="Int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO user_config_smtp
               (user_pk, host, port,
                username, password, from_email,
                from_name, use_ssl, is_default)
        VALUES (#{userPk}, #{host}, #{port},
                #{username}, #{password}, #{fromEmail},
                #{fromName}, #{useSSL}, #{isDefault})
    </insert>
    <update id="update" parameterType="UserConfigSmtp">
        UPDATE user_config_smtp
        <set>
            <if test="host != null and host != ''">
                host = #{host},
            </if>
            <if test="port != null and port != 0">
                port = #{port},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="fromEmail != null and fromEmail != ''">
                from_email = #{fromEmail},
            </if>
            <if test="fromName != null and fromName != ''">
                from_name = #{fromName},
            </if>
            <if test="useSSL != null">
                use_ssl = #{useSSL},
            </if>
            <if test="isUse != null">
                is_use = #{isUse},
            </if>
            <if test="isDefault != null">
                is_default = #{isDefault}
            </if>
        </set>
         WHERE id = #{id}
           AND user_pk = #{userPk}
    </update>

    <update id="updateDefaultInit" parameterType="UserConfigSmtp">
        UPDATE user_config_smtp
           SET is_default = 0
         WHERE user_pk = #{userPk}
    </update>

    <update id="disabled" parameterType="UserConfigSmtp">
        UPDATE user_config_smtp
           SET is_use   = 0
         WHERE id       = #{id}
           AND user_pk  = #{userPk}
    </update>

    <delete id="deleteById">
        DELETE
          FROM user_config_smtp
         WHERE id = #{id}
    </delete>
    <delete id="deleteByUserPk">
        DELETE
          FROM user_config_smtp
         WHERE user_pk = #{userPk}
    </delete>
</mapper>