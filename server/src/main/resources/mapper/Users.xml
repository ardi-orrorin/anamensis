<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anamensis.server.mapper.UsersMapper">
    <sql id="tbl_user">
        SELECT *
          FROM users
    </sql>
    <select id="findAllUsers" resultType="Users">
        <include refid="tbl_user"/>
    </select>
    <select id="findUserByUserId" resultType="Users">
        <include refid="tbl_user"/>
        WHERE user_id = #{userId}
    </select>
    <select id="findUserByUserIdAndPwd" resultType="Users">
        <include refid="tbl_user"/>
        WHERE user_id = #{userId}
          AND pwd     = #{pwd}
    </select>
    <select id="findUserInfo" resultMap="usersResultMap">
        SELECT *
          FROM users a
          JOIN role b
            ON a.id      = b.user_pk
         WHERE a.user_id = #{userId}
    </select>
    <select id="existsUser" resultType="boolean">
        SELECT EXISTS(
               SELECT *
                 FROM users
                WHERE 1 = 1
                 <choose>
                    <when test="type != null and type == 'id' and value != null and value != ''">
                        AND user_id = #{value}
                    </when>
                    <when test="type != null and type == 'email' and value != null and value != ''">
                        AND email   = #{value}
                    </when>
                    <when test="type != null and type == 'phone' and value != null and value != ''">
                        AND phone   = #{value}
                    </when>
                 </choose>
             )
    </select>
    <insert id="save" parameterType="Users">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO users (user_id, pwd, name,
                          email, phone, create_at)
        VALUES (#{userId}, #{pwd}, #{name},
                #{email}, #{phone}, #{createAt})
    </insert>
    <insert id="saveRole" parameterType="Role">
        INSERT INTO role (user_pk, role)
        VALUES (#{userPk}, #{role})
    </insert>
    <update id="editAuth" parameterType="map">
        UPDATE users
           SET s_auth      = #{isAuth},
               s_auth_type = #{authType}
         WHERE id          = #{id}
    </update>

    <update id="updatePoint" parameterType="Map">
        UPDATE users
           SET point = point + #{point}
         WHERE id = #{id}
    </update>

    <update id="update" parameterType="Users">
        UPDATE users
           SET name  = #{name},
               email = #{email},
               phone = #{phone}
         WHERE id    = #{id}
    </update>

    <delete id="deleteRole" parameterType="Role">
        DELETE
          FROM role
         WHERE user_pk = #{userPk}
           AND role    = #{role}
    </delete>
    
    <resultMap id="usersResultMap" type="UsersResultMap" autoMapping="true">
        <id property="userPk" column="id"/>
        <association property="users" resultMap="UserEntity" autoMapping="true" />
        <collection property="roles" resultMap="RoleEntity" />
    </resultMap>

    <resultMap id="UserEntity" type="Users" autoMapping="true">
        <result property="sAuthType" column="s_auth_type" typeHandler="AuthTypeHandler"/>
    </resultMap>
    <resultMap id="RoleEntity" type="Role" autoMapping="true">
        <result property="role" column="role" typeHandler="RoleTypeHandler"/>
    </resultMap>

</mapper>